{
  "manifest_version": 3,
  "name": "1YT Summary",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png", 
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png", 
    "128": "images/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
